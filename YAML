    runs:
       branches: [ "main" ]
     pull_request:
       branches: [-on: ubuntu-latest

    strategy:
      matrix:
        "main" ]

   jobs:
     build:
       runs-on: ubuntu-latest

       strategy:
         matrix:
           node-version: [18.x, 20.x, 22.x]

    steps:
    - uses: actions/checkout@v4

    - name: Use Node.js node-version: [18.x, 20.x, 22.x]

       steps:
       ${{ matrix.node-version }}
      uses: actions/setup - uses: actions/checkout@v4

       - name: Use Node-node@v4
      with:
        node-version: ${{ matrix.js ${{ matrix.node-version }}
         uses: actions/setup-node@v4
         with:
           node-version.node-version }}

    - name: Install dependencies
      run: |
        npm install
        npm install: ${{ matrix.node-version }}

       - name: Install --save-dev gulp

